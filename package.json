{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "test": "lerna run test --stream --no-private",
    "test-ci": "lerna run test-ci --stream --no-private",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --parallel --no-private",
    "format": "node_modules/eslint/bin/eslint.js --fix \"packages/*/src/**/*.{ts,tsx}\"",
    "lint": "node_modules/eslint/bin/eslint.js \"packages/*/src/**/*.{ts,tsx}\"",
    "changed": "lerna changed",
    "sandbox": "./bin/sandbox"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "node_modules/eslint/bin/eslint.js --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^1.3.0",
    "lerna": "^4.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "^14.17.0",
    "npm": "^6.14.6"
  }
}
