{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "test": "lerna run test --stream --no-private",
    "test-ci": "lerna run test-ci --stream --no-private",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --stream --scope @elastic/search-ui && lerna run build --stream --scope '{@elastic/react-search-ui*,@elastic/search-ui-*}'",
    "format": "node_modules/eslint/bin/eslint.js --fix \"packages/*/src/**/*.{ts,tsx}\"",
    "lint": "node_modules/eslint/bin/eslint.js \"packages/*/src/**/*.{ts,tsx}\"",
    "changed": "lerna changed"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "node_modules/eslint/bin/eslint.js --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.11",
    "@types/react": "^17.0.38",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^1.3.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "ts-jest": "^27.1.3"
  },
  "engines": {
    "node": "^14.17.0",
    "npm": "^6.14.6"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
