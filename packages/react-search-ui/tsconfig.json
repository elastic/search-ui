{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "outDir": "lib/esm",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "src/**/*.test.@(ts|tsx)", "**/__test*__/"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"]
}
