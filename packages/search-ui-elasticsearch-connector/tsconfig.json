{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "outDir": "lib/esm",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.js"]
}
