{
  "packages": ["examples/*", "packages/*"],
  "version": "1.23.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "npmClient": "npm",
      "ignoreChanges": ["**/__tests__/**", "**/*.md", "**/src/test/**"],
      "registry": "https://registry.npmjs.org/",
      "message": "Release: %s"
    },
    "run": {
      "sort": true,
      "noPrivate": true
    }
  }
}
